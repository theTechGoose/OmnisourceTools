{
  "name": "@omnisource/omni-diag",
  "imports": {
    "@/": "./",
    "class-validator": "npm:class-validator@^0.14.1",
    "class-transformer": "npm:class-transformer@^0.5.1",
    "reflect-metadata": "npm:reflect-metadata@^0.2.2",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "test": "deno test --allow-read --allow-run --allow-env",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}